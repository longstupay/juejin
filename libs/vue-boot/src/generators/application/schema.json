{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Application",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "project name"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed"
    },
    "style": {
      "description": "The file extension to be used for style files.",
      "type": "string",
      "default": "css",
      "alias": "s",
      "x-prompt": {
        "message": "Which stylesheet format would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "css",
            "label": "CSS"
          },
          {
            "value": "scss",
            "label": "SASS(.scss)       [ http://sass-lang.com                     ]"
          },
          {
            "value": "less",
            "label": "LESS              [ http://lesscss.org                       ]"
          },
          {
            "value": "none",
            "label": "None"
          }
        ]
      }
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "none"],
      "default": "eslint"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "e2eTestRunner": {
      "type": "string",
      "enum": ["cypress", "none"],
      "description": "Test runner to use for end to end (E2E) tests.",
      "default": "cypress"
    },
    "strict": {
      "type": "boolean",
      "description": "Creates an application with strict mode and strict type checking.",
      "default": true
    },
    "setParserOptionsProject": {
      "type": "boolean",
      "description": "Whether or not to configure the ESLint `parserOptions.project` option. We do not do this by default for lint performance reasons.",
      "default": false
    },
    "standaloneConfig": {
      "description": "Split the project configuration into `<projectRoot>/project.json` rather than including it inside `workspace.json`.",
      "type": "boolean",
      "default": true,
      "x-deprecated": "Nx only supports standaloneConfig"
    },
    "jsx": {
      "type": "boolean",
      "description": "Add Jsx support"
    },
    "unitTestRunner": {
      "type": "string",
      "description": "Test runer to use for unit test",
      "x-prompt": {
        "message": "Which test runner would you like to use for unit tests?",
        "type": "list",
        "items": [
          {
            "value": "jest",
            "label": "Jest"
          },
          {
            "value": "vitest",
            "label": "Vitest"
          },
          {
            "value": "none",
            "label": "None"
          }
        ]
      },
      "default": "jest"
    },
    "type": {
      "type": "string",
      "description": "Provide the library type",
      "x-prompt": {
        "message": "Which type of file would you like to generate?",
        "type": "list",
        "items": [
          {
            "value": "ts",
            "label": "TypeScript"
          },
          {
            "value": "js",
            "label": "JavaScript"
          }
        ]
      },
      "default": "ts"
    },
    "backend": {
      "type": "boolean",
      "description": "Create a backend application for Vue applications",
      "default": false,
      "x-prompt": {
        "message": "Would you like to create a backend application?",
        "type": "confirm"
      }
    },
    "skipPackageJson": {
      "type": "boolean",
      "default": false,
      "description": "Do not add dependencies to `package.json`.",
      "x-priority": "internal"
    },
    "bundler": {
      "type": "string",
      "description": "The bundler to use for building the application.",
      "enum": ["vite", "webpack"],
      "default": "vite"
    }
  },
  "required": ["name"]
}
