{
  "name": "vue-boot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/vue-boot/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/vue-boot",
        "main": "libs/vue-boot/src/index.ts",
        "tsConfig": "libs/vue-boot/tsconfig.lib.json",
        "assets": [
          {
            "input": "./libs/vue-boot/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/vue-boot/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/vue-boot",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/vue-boot",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/vue-boot/**/*.ts",
          "libs/vue-boot/generators.json",
          "libs/vue-boot/executors.json",
          "libs/vue-boot/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/vue-boot/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "dryRun": "${dryRun}"
      }
    }
  },
  "tags": []
}
